                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:backgroundTint="#ce1212"
                android:minHeight="37dp"
                android:padding="2dp"
                android:minWidth="37dp"
